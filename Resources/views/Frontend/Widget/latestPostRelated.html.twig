<ul>
  {% for post in posts %}
    <li>
      <a href="{{ path('_blog_view', { 'slug' : post.slug }) }}" title="{{ post }}">{{ post }}</a>
      <small> {{ 'the'|trans }}
        <time datetime="{{ post.createdAt | date('c') }}">
          {{ post.createdAt | localeDate('long') }}</time>
      </small>
    </li>
  {% else %}
    <li>{{ 'No elements'|trans }}</li>
  {% endfor %}
</ul>
